    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SI Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/workspaces/si/si-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/workspaces/si/si-extension/dist/**/*.js",
            ],
            "skipFiles": [
                "**/node_modules/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/workspaces/si/si-extension/dist/**/*.js",
                "!**/node_modules/**"
            ],
            "preLaunchTask": "npm: watch-si"
        },
    ]
}
